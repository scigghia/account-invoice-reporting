<openerp>
    <data>
            <template id="report_invoice_origin_group" inherit_id="sale_layout.report_invoice_layouted" >
                <xpath expr="//t[@t-as='l']" position="replace">
                    <t t-foreach="o.grouped_lines_by_origin(invoice_id=o.id)" t-as="dict_origin_lines">
                        <t t-set="origin" t-value="False"/>
                        <t t-foreach="dict_origin_lines['lines']" t-as="l">
                            <!--t t-set="move" t-value="l.get_move()"/-->
                            <t t-foreach="l.get_move()" t-as="move">
                            <t t-if="move and move.picking_id and origin!=move.picking_id">
                                <tr>
                                    <td colspan="6">
                                        <strong><span t-esc="(move.picking_id.name or '') + (' - ')"/></strong>
                                        <strong><span t-field="move.picking_id.date" t-field-options='{"format": "dd/MM/yyyy"}'/></strong>
                                        <t t-if="move.picking_id.partner_id and move.picking_id.partner_id.type == 'delivery'">
                                            <strong><span t-esc="(move.picking_id.partner_id.name or '') + (move.picking_id.partner_id.city and (', ' + move.picking_id.partner_id.city) or '')"/></strong>
                                        </t>
                                    </td>
                                </tr>
                                <t t-set="origin" t-value="move.picking_id"/>
                            </t>
                            <tr>
                                <td><span t-field="l.name"/></td>
                                <td><span t-field="move.product_uom_qty"/>
                                    <span t-field="l.uom_id" groups="product.group_uom"/></td>
                                <td class="text-right">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td class="text-right" groups="sale.group_discount_per_so_line"><span t-field="l.discount"/></td>
                                <td class="text-right">
                                    <span t-esc="', '.join(map(lambda x: x.name, l.invoice_line_tax_ids))"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_subtotal" 
                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                            </t>
                        </t>
                    </t>
                </xpath>
            </template>
    </data>
</openerp>
